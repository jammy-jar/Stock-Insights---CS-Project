extends ../layout

block content
  main(class='container w-50 border rounded p-3')
    form(action="/login" method="POST") 
      div(class='mt-2 form-group')
        label(class='form-label mb-0' for="username") Username
        input(class='form-control' type="text" name="username" id="username" placeholder="Username" required)

      div(class='mt-2 form-group')
        label(class='form-label mb-0' for="password") Password
        input(class='form-control' type="password" name="password" id="password" placeholder="Password" required)

      button(class='btn btn-primary mt-3') Login

    section(class='mt-3')
      p Don't have an account? 
      div(class='btn-group')
        a(class='btn btn-secondary' href='register') Register
        a(class='btn btn-outline-secondary' href='/') Continue as Guest

